{% schema %}
{
  "name": "Hero Banner",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "TISSO VISON"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Find the ideal gift for your loved ones."
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "CHOOSE GIFT"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "header",
      "content": "Gift Guide Section"
    },
    {
      "type": "text",
      "id": "guide_heading",
      "label": "Guide Heading",
      "default": "The Gift Guide"
    },
    {
      "type": "richtext",
      "id": "guide_text",
      "label": "Guide Text",
      "default": "<p>Discover Joy: Your Ultimate Holiday Gift Destination. Explore our curated selection and find the perfect gifts to delight your loved ones this holiday season.</p>"
    },
    {
      "type": "text",
      "id": "guide_button_text",
      "label": "Guide Button Text",
      "default": "SHOP NOW"
    },
    {
      "type": "url",
      "id": "guide_button_link",
      "label": "Guide Button Link"
    }
  ],
  "presets": [
    {
      "name": "Hero Banner",
      "category": "Custom Sections"
    }
  ]
}
{% endschema %}

{% stylesheet %}
  <style>
    .hero-banner {
      display:flex;
      flex-direction:row-reverse;
      text-align: center;
      padding: 4rem 2rem;
      background-size: cover;
      background-position: center;
    }

    .hero-heading {
      font-size: 2.5rem;
      margin-bottom: 1rem;
    }

    .section-divider {
      margin: 3rem auto;
      width: 50%;
      border-top: 1px solid rgba(0,0,0,0.1);
    }

    .gift-guide-section {
      background-image:url("")
      max-width: 800px;
      margin: 0 auto;
      padding: 2rem;
    }

    .cta-button {
      display: inline-block;
      padding: 1rem 2rem;
      background-color: #000;
      color: #fff;
      text-decoration: none;
      margin-top: 1rem;
      border-radius: 4px;
    }

    .sustainable-text {
      text-align: center;
      padding: 2rem;
      font-size: 0.9rem;
      opacity: 0.8;
    }
  </style>
{% endstylesheet %}

{% javascript %}
{% endjavascript %}

<div class="hero-banner">
  <h1 class="hero-heading">{{ section.settings.heading }}</h1>
  <p>{{ section.settings.subheading }}</p>
  <a href="{{ section.settings.button_link }}" class="cta-button">
    {{ section.settings.button_text }}
  </a>
</div>

<hr class="section-divider">

<div class="gift-guide-section">
  <h2>{{ section.settings.guide_heading }}</h2>
  <div class="guide-content">
    {{ section.settings.guide_text }}
  </div>
  <a href="{{ section.settings.guide_button_link }}" class="cta-button">
    {{ section.settings.guide_button_text }}
  </a>
</div>

<p class="sustainable-text">SUSTAINABLE, ETHICALLY MADE CLOTHES IN SIZES XXS TO 6XL</p>
