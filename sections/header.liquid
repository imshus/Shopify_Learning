{% schema %}
{
  "name": "Hero Banner",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "TISSO VISON"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Find the ideal gift for your loved ones."
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "CHOOSE GIFT"
    },
    { // MISSING BUTTON LINK SETTING
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    }
  ]
}
{% endschema %}

{% stylesheet %}
  <style>
    .hero-banner {
      display: flex;
      flex-direction: row;
      align-items: center; /* Vertical alignment */
      justify-content: center; /* Horizontal alignment */
      gap: 2rem; /* Space between elements */
      flex-wrap: wrap; /* Allow wrapping on mobile */
    }

    .hero-heading,
    .cta-button,
    p {
      margin: 0; /* Remove default margins */
    }
  </style>
{% endstylesheet %}

<div class="hero-banner">
  <h1 class="hero-heading">{{ section.settings.heading }}</h1>
  <p>{{ section.settings.subheading }}</p>
  <a href="{{ section.settings.button_link }}" class="cta-button">
    {{ section.settings.button_text }}
  </a>
</div>
